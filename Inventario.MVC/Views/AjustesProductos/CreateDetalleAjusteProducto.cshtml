@model Inventario.Entidades.DetalleAjusteProducto

<link href='https://cdn.jsdelivr.net/npm/boxicons@2.0.9/css/boxicons.min.css' rel='stylesheet'>

<div class="wrapper-F">
    <div class="F_box">
        
        <div class="F-header">
            <span>Crear Detalle Ajuste Producto</span>
            
        </div>
       
            <form asp-action="Create" id="createForm" method="post" asp-controller="AjustesProductos" class="F">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="input_box-F">
                    <input asp-for="ID_DetalleAjuste" class="input-field-F" value="0" hidden />
                    <span asp-validation-for="ID_DetalleAjuste" class="text-danger"></span>
                </div>

                <div class="input_box-F">
                    <input asp-for="ID_Ajuste" class="input-field-F" id="ID_Ajuste" name="ID_Ajuste" value="" hidden />
                    <span asp-validation-for="ID_Ajuste" class="text-danger"></span>
                </div>

                <div class="input_box-F">
                    <i class="bx bx-barcode icon"></i>
                    <select asp-for="ID_Producto" class="input-field-F" asp-items="ViewBag.Productos"></select>
                    <label asp-for="ID_Producto" class="label-F">Selecciona el Producto</label>
                    <span asp-validation-for="ID_Producto" class="text-danger"></span>
                </div>

                <div class="input_box-F">
                    <i class="bx bx-font icon"></i>
                <input asp-for="CantidadAjustada" class="input-field-F" pattern="^[+-]?\d+$" required />
                    <label asp-for="CantidadAjustada" class="label-F">Cantidad Ajustada</label>
                    <span asp-validation-for="CantidadAjustada" class="text-danger"></span>
                </div>

                <div class="input_box-F">
                    <i class="bx bx-comment-detail icon"></i>
                    <input asp-for="RazonAjuste" class="input-field-F" required />
                    <label asp-for="RazonAjuste" class="label-F">Razón del Ajuste</label>
                    <span asp-validation-for="RazonAjuste" class="text-danger"></span>
                </div>

                <div class="input_box-F">
                    <input type="submit" value="Create" class="btn2" />
                </div>
                <div class="input_box-F">
                    <a asp-action="Index" class="btn2">Volver a la lista</a>
                </div>
                
            </form>
        
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        // Asegúrate de que el script se ejecuta cuando el DOM está completamente cargado
        document.addEventListener("DOMContentLoaded", function () {
            // Asignar el valor del ID_Ajuste desde el ViewBag
            var idAjuste = @ViewBag.ID_Ajuste;
            document.getElementById("ID_Ajuste").value = idAjuste;
        });
    </script>
}
