@model IEnumerable<Inventario.Entidades.DTO.DetalleAjusteProductoDTO>



<p>
    <a asp-action="CreateDetalleAjusteProducto" asp-route-id="@ViewBag.ID_Ajuste" class="btn btn-primary">Create New</a>
    <a asp-action="Index"  class="btn btn-primary">Regresar</a>

    <form asp-controller="Reporte" asp-action="PrevisualizarPDF" method="post">
        <div class="form-group">
            <label for="descripcion">Descripción del Ajuste:</label>
            <input type="text" class="form-control" id="descripcion" name="descripcion" required />
        </div>
        <button type="submit" class="btn btn-primary">Generar PDF</button>
    </form>


</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Fecha)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ID_DetalleAjuste)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ID_Producto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NombreProducto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CodigoProducto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CantidadAjustada)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RazonAjuste)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Fecha)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ID_DetalleAjuste)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ID_Producto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NombreProducto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CodigoProducto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CantidadAjustada)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RazonAjuste)
            </td>
            <td>
                @* @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }, new { @class = "btn btn-primary" }) | *@
                @Html.ActionLink("Details", "Details", new {  id=item.ID_DetalleAjuste}, new { @class = "btn btn-info" }) 
                @* @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ }, new { @class = "btn btn-danger" }) *@
            </td>
        </tr>
}
    </tbody>
</table>


